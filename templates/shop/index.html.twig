{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <h1>Shop index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Name</th>
                <th>ExternalId</th>
                <th>Image</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.id }}</td>
                <td>{{ shop.uuid }}</td>
                <td>{{ shop.Name }}</td>
                <td>{{ shop.ExternalId }}</td>
                <td>{{ shop.Image }}</td>
                <td>{{ shop.Url }}</td>
                <td>
                    <a href="{{ path('shop_show', {'id': shop.id}) }}">show</a>
                    <a href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('shop_new') }}">Create new</a>
{% endblock %}
