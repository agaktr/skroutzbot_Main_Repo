    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ product.uuid }}</td>
            </tr>
            <tr>
