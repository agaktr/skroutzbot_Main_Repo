<form method="post" action="{{ path('user_profile_delete', {'uuid': user_profile.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_profile.uuid) }}">
    <button class="btn buttonDel">Delete</button>
</form>
