{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>ProductUuid</th>
                <th>Mode</th>
                <th>Competitors</th>
                <th>LowestPrice</th>
                <th>Increment</th>
                <th>Created</th>
                <th>LastRun</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.uuid }}</td>
                <td>{{ job.ProductUuid }}</td>
                <td>{{ job.Mode }}</td>
                <td>{{ job.Competitors ? job.Competitors|join(', ') : '' }}</td>
                <td>{{ job.LowestPrice }}</td>
                <td>{{ job.Increment }}</td>
                <td>{{ job.Created }}</td>
                <td>{{ job.LastRun }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
